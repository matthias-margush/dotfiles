(load "~/.config/emacs/layers/languages" nil t)

(setq mac-option-modifier 'meta)
(global-set-key (kbd "s-}") #'ns-prev-frame)
(global-set-key (kbd "s-{") #'ns-next-frame)
(global-set-key (kbd "s-t") #'make-frame)
